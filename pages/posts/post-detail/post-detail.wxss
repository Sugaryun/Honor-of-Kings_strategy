/* pages/posts/post-detail/post-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 100%;
  height: 460rpx;
}
.author-data{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.avatar{
  width: 64rpx;
  height: 64rpx;
}
.author{
  font-size: 30rpx;
  margin-left: 20rpx;
  font-weight: 300;
  color: #666;
}
.const-text{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}
.title{
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b566c;
}
.tool{
  margin-top: 20rpx;
}
.circle-image{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 40rpx;
}
.circle-image Image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}
.share-img{
  margin-left: 30rpx;
}
.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  z-index: -99;
  bottom: 45rpx;
  position: relative;
  margin: 0 auto;
}
.detail{
  margin: 20rpx 30rpx 20rpx 30rpx;
  color: #666;
  letter-spacing: 2rpx;
  line-height: 44rpx;
}